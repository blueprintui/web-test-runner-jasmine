{
  "compilerOptions": {
    "target": "es2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "inlineSourceMap": false,
    "importHelpers": true,
    "types": ["jasmine", "node"],
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "."
  },
  "include": ["src/*.ts", "spec/*.ts", "spec/**/*.ts"]
}
